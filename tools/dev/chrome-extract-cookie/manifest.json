{
  "name": "Extract RC Cookie",
  "version": "1.1",
  "description": "Copy RC Cookies to localhost domain",
  "icons": {
    "128": "concept-128x128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "nativeMessaging",
    "notifications"
  ],
  "host_permissions": [
    "https://*.ruckuswireless.com/",
    "http://*.ruckuswireless.com/",
    "https://ruckus.cloud/",
    "http://ruckus.cloud/",
    "https://*.ruckus.cloud/",
    "http://*.ruckus.cloud/",
    "http://127.0.0.1/",
    "http://localhost/",
    "https://staging.mlisa.io/",
    "https://local.mlisa.io/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
      "matches": [
          "https://*.ruckuswireless.com/*",
          "https://*.ruckus.cloud/*"
      ],
      "js": [
          "content/source.js"
      ]
  }, {
      "matches": [
          "http://localhost:3000/*",
          "http://localhost:3333/*"
      ],
      "js": [
          "content/target.js"
      ]
  }],
  "action": {
    "default_icon": "concept-128x128.png",
    "default_title": "Click the icon to copy cookies from configured domain to localhost. Default is set to devalto. Domain can be changed in options"
  },
  "manifest_version": 3
}
